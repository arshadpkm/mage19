<?xml version="1.0"?>
<layout>
	<adminhtml_sales_order_view>
		<reference name="order_items">
			<action method="addColumnRender">
				<column>name</column>
				<block>adminhtml/sales_items_column_name</block>
				<template>marketplace/sales/items/column/name.phtml</template>
			</action>
		</reference>
	</adminhtml_sales_order_view>
    <marketplace_adminhtml_marketplace_index>
        <reference name="content">
            <block type="marketplace/adminhtml_marketplace" name="marketplace" />
        </reference>
    </marketplace_adminhtml_marketplace_index>
    <marketplace_adminhtml_commission_index>
        <reference name="content">
            <block type="marketplace/adminhtml_commission" name="marketplace" />
        </reference>
    </marketplace_adminhtml_commission_index>
</layout>